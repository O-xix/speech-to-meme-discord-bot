{
    "compilerOptions": {
        "target": "es2024",
        "module": "NodeNext",
        "lib": ["es2024"],
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "incremental": true,
        "outDir": "dist",
        "sourceMap": true,
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
